        }
        
        .demo1 {
            /* text-shadow 的参数：x轴偏移量 y轴偏移量 模糊值 颜色,加入多个用逗号分隔*/
            text-shadow: -3px -3px 5px red;
        }
        
        .demo2 {
            text-shadow: 0px 0px 30px #ffffff;
        }
        
        .demo3 {
            /* 多重阴影效果*/
            text-shadow: 0px 0px 30px #ffffff, 0px 0px 30px #f00, 0px 0px 30px #ffffff;
        }
        
        .demo4 {
            color: black;
            text-shadow: 2px 2px 0px #ffffff;
        }
        
        .demo5 {
            /* 立体浮雕效果*/
            color: #ffffff;
            text-shadow: -1px -1px 0px #eeeeee, -3px -3px 0px #dddddd, -5px -5px 0px #cccccc;
        }
        
        .demo6 {
            color: transparent;
            text-shadow: 0px 0px 8px hsla(30, 100%, 50%, 1);
        }
    </style>
